model Event {
    id          String      @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String?
    date        DateTime
    time        String?
    location    String?
    lat         Float?
    lon         Float?
    status      EventStatus @default(PENDING)

    isDeleted Boolean @default(false)

    createdById  String  @db.ObjectId
    createdBy    User    @relation("CreatedEvents", fields: [createdById], references: [id])
    coupleId     String  @db.ObjectId
    couple       Couple  @relation(fields: [coupleId], references: [id])
    approvedById String? @db.ObjectId
    approvedBy   User?   @relation("ApprovedEvents", fields: [approvedById], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("events")
}

enum EventStatus {
    PENDING // Newly created; waiting for partner approval
    APPROVED // Partner approved the event
    CANCELLED // Partner rejected/cancelled it
    PAST //if passed the date
}
